@model IEnumerable<EventQuery.Models.IG.UserInformation>

@{
    ViewBag.Title = "InstagramImages";
}

<h2>Instagram Images</h2>

 
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RetrievedUsing)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedOn)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        
            @if (String.IsNullOrEmpty(item.Title))
            {
                <td></td>
            }
            else
            {
                string title = item.Title.Length <= 40 ? item.Title : item.Title.Substring(0, 40) + "...";
                <td>@title</td>
            }
        
        <td>
            @Html.DisplayFor(modelItem => item.ImageUrl)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RetrievedUsing)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedOn)
        </td>
        <td> 
            @Html.ActionLink("View", "ViewIgImage", new { imageUri = item.ImageUrl })
         
        </td>
    </tr>
                }

</table>
